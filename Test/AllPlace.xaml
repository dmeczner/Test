<Page
    x:Class="Test.AllPlace"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Test"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <StackPanel Spacing="24">
            <!-- Fejléc -->
            <StackPanel Orientation="Horizontal" 
                       Spacing="16" 
                       VerticalAlignment="Center">
                <TextBlock Text="Események" 
                          FontSize="28" 
                          FontWeight="SemiBold"/>

                <Button Content="Új esemény"
                       Click="CreateNewEvent_Click"
                       Background="{ThemeResource SystemAccentColor}"
                       Foreground="White"
                       Padding="16,8"
                       CornerRadius="4"/>
            </StackPanel>

            <!-- Kártyák listája -->
            <GridView x:Name="EventsGridView"
                     SelectionMode="None">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <!-- Egyedi kártya design -->
                        <Border Width="300" 
                               Background="{ThemeResource SystemAltHighColor}"
                               CornerRadius="8"
                               Padding="16"
                               Margin="8">
                            <!--<Border.Effect>
                                <DropShadowEffect BlurRadius="16" 
                                                 Opacity="0.1" 
                                                 Color="Black"/>
                            </Border.Effect>-->

                            <StackPanel Spacing="12">
                                <!-- Esemény adatok -->
                                <TextBlock Text="{Binding Name}"
                                          FontSize="18"
                                          FontWeight="SemiBold"/>

                                <StackPanel Spacing="4">
                                    <TextBlock Text="{Binding Place}"
                                              Foreground="{ThemeResource SystemBaseMediumColor}"/>
                                    <TextBlock Text="{Binding Capacity}"
                                              Foreground="{ThemeResource SystemAccentColor}"/>
                                </StackPanel>

                                <!-- Akció gombok -->
                                <StackPanel Orientation="Horizontal" 
                                           HorizontalAlignment="Right"
                                           Spacing="8">
                                    <Button Content="Szerkesztés"
                                           Style="{StaticResource TransparentButtonStyle}"
                                           Click="EditButton_Click"
                                           Tag="{Binding Id}"/>

                                    <Button Content="Törlés"
                                           Foreground="Red"
                                           Style="{StaticResource TransparentButtonStyle}"
                                           Click="DeleteButton_Click"
                                           Tag="{Binding Id}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>

                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>
        </StackPanel>
    </Grid>
</Page>
